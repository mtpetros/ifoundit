<div class="container-fluid">
    <div class="row">
        <div class="col-md-4 col-md-offset-1">
            <div class="panel panel-default">
                <div class="panel-heading">Item Information</div>
                <div class="panel-body">
                    {{#markerDetails.marker}}
                        <p>description: {{desc}}</p>
                        <p>street: {{street}}</p>
                        <p>city: {{city}}</p>
                        <p>state: {{state}}</p>
                        <p>zip: {{zip}}</p>
                        <p>posted by: {{name}}</p>
                        <p>contact: {{contact}}</p>
                    {{/markerDetails.marker}}
                </div>
            </div>
        </div>
        <div class="col-md-4 col-md-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading">Messages</div>
                <div class="panel-body">
                    {{#markerDetails.messages}}
                        <p>description: {{desc}}</p>
                        <p>street: {{street}}</p>
                        <p>city: {{city}}</p>
                        <p>state: {{state}}</p>
                        <p>zip: {{zip}}</p>
                        <p>posted by: {{name}}</p>
                        <p>contact: {{contact}}</p>
                    {{/markerDetails.messages}}
                </div>
            </div>
        </div>
    </div>
</div>